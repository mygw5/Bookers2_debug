<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
          <td>
            <%= link_to book.tag, tagsearch_path %>
          </td>
        <td id="favorite-btn_<%= book.id %>">
          <%= render "favorites/favorite-btn", book: book %>
        </td>
        <td>
          コメント数: <span id="book_comment_count"><%= book.book_comments.count %></span>
        </td>
        <td>
          <%= render 'books/value_show', book: book %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>